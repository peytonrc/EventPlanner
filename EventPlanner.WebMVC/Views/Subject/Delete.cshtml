@model EventPlanner.Models.SubjectModels.SubjectDetail

@{
    ViewBag.Title = "Delete";
}

<div>
    <h2 style="text-align: center; padding-top: 1em;">Subject Details</h2>
    <h4 style="text-align: center; color: darkslategray;">Are you sure you want to delete this subject?</h4>
    <hr />

    <div class="card-container" style="text-align: center;">
        <div class="card" style="height: 10em; width: 20em; display: inline-flex; padding: 1em 1em 1em 1em; margin: 1em 1em 1em 1em;">
            <div style="text-align: left;">
                @Html.DisplayFor(model => model.SubjectID)
            </div>

            <div style="color: maroon; font-weight: 700">
                @Html.DisplayFor(model => model.TypeOfEvent)
            </div>

            <div style="padding-bottom: 7px;">
                @Html.DisplayFor(model => model.SubjectName)
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div style="margin-right: 8px;">
                    <button value="@Model.SubjectID" class="btn text-white delete"><i title="Delete" class="far fa-trash-alt"></i>&nbsp;</button>
                    @Html.ActionLink(" ", "Index", new { id = Model.SubjectID }, new { @class = "fas fa-arrow-left", @title = "Return to Subjects" })
                </div>
            }
            </div>
            
        </div>
    
</div>
