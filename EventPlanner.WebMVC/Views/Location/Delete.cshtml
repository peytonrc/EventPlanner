@model EventPlanner.Models.LocationModels.LocationDetail

@{
    ViewBag.Title = "Delete";
}

<div>
    <h2 style="text-align: center; padding-top: 1em;">Location Details</h2>
    <h4 style="text-align: center; color: darkslategray;">Are you sure you want to delete this location?</h4>
    <hr />
    <div class="card-container" style="text-align: center;">
        <div class="card" style="height: auto; width: 21em; display: inline-flex; padding: 1em 1em 1em 1em; margin: 1em 1em 1em 1em;">
            <div style="text-align: left;">
                @Html.DisplayFor(model => model.LocationID)
            </div>

            <div style="color: maroon; font-weight: 700">
                @Html.DisplayFor(model => model.LocationName)
            </div>

            <div>
                @Html.DisplayFor(model => model.Address)
            </div>

            <div style="padding-bottom: 7px;">
                Inside: @Html.DisplayFor(model => model.IsInside)
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div style="margin-right: 8px;">
                    <button value="@Model.LocationID" class="btn text-white delete"><i class="far fa-trash-alt"></i>&nbsp;</button>
                    @Html.ActionLink(" ", "Index", new { id = Model.LocationID }, new { @class = "fas fa-arrow-left" })
                </div>
            }
        </div>

    </div>
</div>
