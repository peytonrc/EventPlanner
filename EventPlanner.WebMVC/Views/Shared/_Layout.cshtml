<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Event Planner</title>
    @Styles.Render("~/Content/css")
    <script src="https://kit.fontawesome.com/55ae0bbdc2.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Abel&display=swap" rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" type="image/png" href="~/Content/Assets/faviconcal.png"/>

</head>
<body>



    <nav class="navbar navbar-expand-sm navbar-dark bg-dark fix fixed-top">

        <div class="container">
            @Html.ActionLink("Event Planner", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">

                    <li style="padding-right:1em;" class="nav-item">
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li style="padding-right:1em;" class="nav-item">
                            @Html.ActionLink("Subjects", "Index", "Subject")
                        </li>
                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li style="padding-right:1em;" class="nav-item">
                            @Html.ActionLink("Locations", "Index", "Location")
                        </li>
                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li style="padding-right:1em;" class="nav-item">
                            @Html.ActionLink("Events", "Index", "Event")
                        </li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />

        <footer>
            <p>&copy; @DateTime.Now.Year - Event Planner</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
